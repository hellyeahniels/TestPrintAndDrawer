<Page x:Class="TestPrintAndDrawer.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TestPrintAndDrawer"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <StackPanel>
        <Button x:Name="initprinterbutton"
                Click="initprinterbutton_Click"
                Content="Initialize printer" />
        <Button x:Name="releaseprinterbutton"
                Click="releaseprinterbutton_Click"
                Content="Release printer" />
        <Button x:Name="printbutton"
                Click="printbutton_Click"
                Content="Print"
                IsEnabled="False" />
        <Button x:Name="initdrawerbutton"
                Click="initdrawerbutton_Click"
                Content="Initialize drawer" />
        <Button x:Name="releasedrawerbutton"
                Click="releasedrawerbutton_Click"
                Content="Release drawer" />
        <Button x:Name="opendrawerbutton"
                Click="opendrawerbutton_Click"
                Content="Open drawer"
                IsEnabled="False" />
        <TextBlock x:Name="errortext" Text="default" />
    </StackPanel>
</Page>
